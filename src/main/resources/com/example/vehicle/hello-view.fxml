<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.vehicle.MainController">
    <!-- Vehicle Section -->
    <AnchorPane fx:id="vehicleSection" layoutX="20" layoutY="20" prefWidth="600" prefHeight="250">
        <TextField fx:id="vehicleModelField" promptText="Model" layoutX="20" layoutY="20" />
        <TextField fx:id="vehicleLicensePlateField" promptText="License Plate" layoutX="20" layoutY="60" />
        <TextField fx:id="vehiclePriceField" promptText="Price per Day" layoutX="20" layoutY="100" />

        <Button text="Add Vehicle" fx:id="addVehicleButton" layoutX="20" layoutY="140" onAction="#handleAddVehicle" />
        <Button text="Update Vehicle" fx:id="updateVehicleButton" layoutX="120" layoutY="140" onAction="#handleUpdateVehicle" />
        <Button text="Delete Vehicle" fx:id="deleteVehicleButton" layoutX="220" layoutY="140" onAction="#handleDeleteVehicle" />
    </AnchorPane>

    <!-- User Section -->
    <AnchorPane fx:id="userSection" layoutX="20" layoutY="300" prefWidth="600" prefHeight="250">
        <TextField fx:id="userNameField" promptText="User Name" layoutX="20" layoutY="20" />
        <TextField fx:id="userIdField" promptText="User ID" layoutX="20" layoutY="60" />

        <Button text="Add User" fx:id="addUserButton" layoutX="20" layoutY="100" onAction="#handleAddUser" />
        <Button text="Update User" fx:id="updateUserButton" layoutX="120" layoutY="100" onAction="#handleUpdateUser" />
        <Button text="Delete User" fx:id="deleteUserButton" layoutX="220" layoutY="100" onAction="#handleDeleteUser" />
    </AnchorPane>

    <!-- Rental Section -->
    <AnchorPane fx:id="rentalSection" layoutX="20" layoutY="580" prefWidth="600" prefHeight="150">
        <TextField fx:id="rentalUserIdField" promptText="User ID" layoutX="20" layoutY="20" />
        <TextField fx:id="rentalVehicleIdField" promptText="Vehicle ID" layoutX="20" layoutY="60" />

        <Button text="Add Rental" fx:id="addRentalButton" layoutX="20" layoutY="100" onAction="#handleAddRental" />
    </AnchorPane>
</AnchorPane>
