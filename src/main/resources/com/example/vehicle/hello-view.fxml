<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="730.0" prefWidth="1020.0" style="-fx-background-color: #f5f5f5;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23" fx:controller="com.example.vehicle.controller.MainController">

    <!-- Title -->
    <Label layoutX="300" layoutY="20" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Vehicle Rental System" />

    <!-- Vehicle Section -->
    <VBox alignment="CENTER_LEFT" layoutX="325.0" layoutY="70.0" prefHeight="207.0" prefWidth="336.0" spacing="15" style="-fx-background-color: #ffffff; -fx-padding: 10; -fx-border-radius: 5; -fx-border-color: #ccc; -fx-border-width: 1;">
        <TextField fx:id="vehicleModelField" promptText="Vehicle Model" />
        <TextField fx:id="vehicleLicensePlateField" promptText="License Plate" />
        <TextField fx:id="vehiclePriceField" promptText="Price Per Day" />
        <HBox spacing="15">
            <Button fx:id="addVehicleButton" onAction="#handleAddVehicle" text="Add Vehicle" />
            <Button fx:id="updateVehicleButton" onAction="#handleUpdateVehicle" text="Update Vehicle" />
            <Button fx:id="deleteVehicleButton" onAction="#handleDeleteVehicle" text="Delete Vehicle" />
        </HBox>
    </VBox>

    <!-- User Section -->
    <VBox alignment="CENTER_LEFT" layoutX="22.0" layoutY="70.0" prefHeight="207.0" prefWidth="278.0" spacing="15" style="-fx-background-color: #ffffff; -fx-padding: 10; -fx-border-radius: 5; -fx-border-color: #ccc; -fx-border-width: 1;">
        <TextField fx:id="userNameField" promptText="User Name" />
        <TextField fx:id="userIdField" promptText="User ID" />
        <HBox spacing="15">
            <Button fx:id="addUserButton" onAction="#handleAddUser" text="Add User" />
            <Button fx:id="updateUserButton" onAction="#handleUpdateUser" text="Update User" />
            <Button fx:id="deleteUserButton" onAction="#handleDeleteUser" text="Delete User" />
        </HBox>
    </VBox>

    <!-- Rental Section -->
    <VBox alignment="CENTER_LEFT" layoutX="685.0" layoutY="70.0" spacing="15" style="-fx-background-color: #ffffff; -fx-padding: 10; -fx-border-radius: 5; -fx-border-color: #ccc; -fx-border-width: 1;">
        <TextField fx:id="rentalUserIdField" promptText="Rental User ID" />
        <TextField fx:id="rentalVehicleIdField" promptText="Rental Vehicle ID" />
        <DatePicker fx:id="startDateField" promptText="Start Date" />
        <DatePicker fx:id="endDateField" promptText="End Date" />
        <HBox spacing="15">
            <Button fx:id="addRentalButton" onAction="#handleAddRental" text="Add Rental" />
            <Button fx:id="updateRentalButton" onAction="#handleUpdateRental" text="Update Rental" />
            <Button fx:id="deleteRentalButton" onAction="#handleDeleteRental" text="Delete Rental" />
        </HBox>
    </VBox>
   <ListView layoutX="22.0" layoutY="301.0" prefHeight="333.0" prefWidth="970.0" />

</AnchorPane>
